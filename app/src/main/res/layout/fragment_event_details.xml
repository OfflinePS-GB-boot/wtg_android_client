<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    tools:context=".ui.events.EventDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_txt_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@sample/events.json/data/title" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:background="@drawable/round_corner"
                android:textColor="@color/text_color"
                tools:text="@sample/events.json/data/description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/start_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:background="@drawable/round_corner"
                android:textColor="@color/text_color"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                tools:text="@sample/events.json/data/startDatetime" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/end_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:background="@drawable/round_corner"
                android:textColor="@color/text_color"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/start_date_time"
                tools:text="@sample/events.json/data/finishDatetime" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:background="@drawable/round_corner"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/end_date_time"
                tools:text="@sample/events.json/data/price" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/share_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_max_elevation"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/favor_btn_container"
                    app:strokeColor="@color/card_background_color">
                    <ImageButton
                        android:id="@+id/share_button"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share_outline"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/favor_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_max_elevation"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintStart_toEndOf="@id/share_btn_container"
                    app:layout_constraintTop_toTopOf="@id/share_btn_container"
                    app:layout_constraintBottom_toBottomOf="@id/share_btn_container"
                    app:layout_constraintEnd_toStartOf="@id/calendar_btn_container"
                    app:strokeColor="@color/card_background_color">
                    <ImageButton
                        android:id="@+id/favor_button"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_outline"

                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/calendar_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_max_elevation"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintStart_toEndOf="@id/favor_btn_container"
                    app:layout_constraintTop_toTopOf="@id/favor_btn_container"
                    app:layout_constraintBottom_toBottomOf="@id/favor_btn_container"
                    app:layout_constraintEnd_toStartOf="@id/route_btn_container"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/card_background_color">
                    <ImageButton
                        android:id="@+id/calendar_button"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar_plus"

                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/route_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_max_elevation"
                    app:cardPreventCornerOverlap="true"
                    android:background="?android:attr/selectableItemBackground"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintStart_toEndOf="@id/calendar_btn_container"
                    app:layout_constraintTop_toTopOf="@id/calendar_btn_container"
                    app:layout_constraintBottom_toBottomOf="@id/calendar_btn_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/card_background_color">
                    <ImageButton
                        android:id="@+id/route_button"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/route"
                        />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>