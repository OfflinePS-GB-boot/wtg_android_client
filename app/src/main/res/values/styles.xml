<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settings_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/large_txt_size</item>
    </style>

    <style name="settings_card_description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/description_txt_size</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/card_description_text_color</item>
    </style>

    <style name="settings_top_card_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settings_top_card_description_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/card_description_text_color</item>
    </style>

    <style name="settings_top_card_date_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/card_description_text_color</item>
    </style>

    <style name="ActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_auth_24</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Menu icon"</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="card_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_margin</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="card_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_style">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="main_fragment_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="details_buttons_style">
        <item name="android:layout_width">@dimen/details_buttons_size</item>
        <item name="android:layout_height">@dimen/details_buttons_size</item>
        <item name="android:layout_marginStart">@dimen/details_buttons_margins</item>
        <item name="android:layout_marginTop">@dimen/details_buttons_margins</item>
        <item name="android:layout_marginEnd">@dimen/details_buttons_margins</item>
        <item name="android:layout_marginBottom">@dimen/details_buttons_margins</item>
        <item name="android:background">@drawable/background_round_buttons</item>
        <item name="android:elevation">@dimen/details_buttons_elevation</item>
    </style>

    <style name="rest_buttons_style">
        <item name="android:layout_width">@dimen/rest_buttons_size</item>
        <item name="android:layout_height">@dimen/rest_buttons_size</item>
        <item name="android:background">@drawable/rest_background_buttons</item>
        <item name="android:elevation">@dimen/details_buttons_elevation</item>
    </style>

    <style name="rest_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>