<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhereToGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryVariant">#C14CD5</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <!-- Splashscreen -->
    <style name="Splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="expandedBarTextStyle" parent="Theme.WhereToGo">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>